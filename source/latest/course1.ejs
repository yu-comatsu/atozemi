<%- include('../_partial/_data.ejs') %>
<%
    $course = latest.courses.course1
    me = {
        id: 1,
        title: $course.title
    };
    $partial = "../_partial/";
%>
<%- include($partial+'_head.ejs', {me: me ,$root: '../' }) %>
<body class="course">
    <%- include($partial+'_header.ejs', {$root: '.' }) %>
    <main>
        <h2><%- $course.title %></h2>
        <section>
            <div>
                <img src="" alt="画像">
            </div>
            <div>
                <h3>開催店舗</h3>
                <p><%- $course.organizer %></p>
                <h3>講座内容</h3>
                <p><%- $course.desc %></p>
            </div>
        </section>
        <section>
            <div>
                <h3>開催日時</h3>
                <ul></ul>
                <h3>開催場所</h3>
                <p><%- $course.place.name %></p>
                <p><%- $course.place.address %></p>
            </div>
            <div>
                <iframe
                    src="https://maps.google.com/maps?q=文具のキムラヤ&t=m&z=16&output=embed&iwloc=near" 
                    width="600"
                    height="450"
                    frameborder="0"
                    style="border:0"
                    allowfullscreen
                >
                </iframe>
            </div>
        </section>
        <section>
            <table>
                <tr>
                    <th>対象</th>
                    <td><%- $course.target %></td>
                </tr>
                <tr>
                    <th>定員</th>
                    <td><%- $course.capacity %></td>
                </tr>
                <tr>
                    <th>参加費</th>
                    <td><%- $course.price %></td>
                </tr>
                <tr>
                    <th>持ち物</th>
                    <td><%- $course.toBring %></td>
                </tr>
            </table>
        </section>
    </main>
    <%- include($partial+'_footer.ejs', { $root: '.' }) %>
</body>